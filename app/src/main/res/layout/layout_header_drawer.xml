<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_padding_xlarge"
    android:paddingTop="@dimen/default_padding_huge">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="@dimen/default_padding_medium"
        android:scaleType="centerInside"
        android:src="@drawable/ic_github_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:orientation="vertical"
        android:padding="@dimen/default_padding_medium">

        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_size_xmedium"
            tools:text="Pham Nguyen Hung" />

        <TextView
            android:id="@+id/tv_login_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackAlpha90"
            android:textSize="@dimen/font_size_medium"
            tools:text="hungpn" />
    </LinearLayout>
</RelativeLayout>